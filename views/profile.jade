extends layout

block content
  h2= title
  br
  
  .profileContainer
    .col-sm-4
      p Username:
    .col-sm-8
      p #{account.username}
      br
  .profileContainer
    .col-sm-4
      p Name:
    .col-sm-8
      p #{account.name}
      br
  .profileContainer
    .col-sm-4
      p Gender: 
    .col-sm-8
      p #{account.gender}
      br
  .profileContainer
    .col-sm-4
      p Birthday: 
    .col-sm-8
      p #{birthdate}
      br
  .profileContainer
    .col-sm-4
      p Gym: 
    .col-sm-8
      p #{gym}
      br
  .profileContainer
    .col-sm-4
      p Interests: 
    .col-sm-8
      p #{interest.interest1}
      p #{interest.interest2}
      p #{interest.interest3}
      br
  .profileContainer
    .col-sm-4
      p Address: 
    .col-sm-8
      //hide street from public
      if(user)
        p #{address.street}
      p #{address.city}
      //state not in schema yet; delete string when it is
      p #{address.state}, #{address.country}  
      br 
  .profileContainer
    .col-sm-4
      p About Me: 
    .col-sm-8
      p #{aboutMe}
      br
  .profileContainer
    if (user)
      .col-sm-4
        p Email:
      .col-sm-8
        p #{account.email}
        br
        a(href="/editprofile")
          button.btn.btn-default(type='button') Edit profile
      
