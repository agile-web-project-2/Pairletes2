extends layout

block content
  h1 Edit profile
  
  
  if(user)
    form(action="/editprofile" method="post")
      .form-group
      br
      .col-md-6 
       p Name: 
       h3 #{user.name}
       br
       p Email:
       h3 #{user.email}
       br

       
       p Address:
       br
       input#street.form-control(type='text' value='' name='street' placeholder="Street")
       input#city.form-control(type='text' value='' name='city' placeholder="City")
       //might make state a dropdown menu
       input#state.form-control(type='text' value='' name='state' placeholder="State")
       input#country.form-control(type='text' value='' name='country' placeholder="Country")
      .col-md-6
        p Interests:
        input#interest1.form-control(type='text' value='' name='interest1' placeholder="e.g. Gym")
        input#interest2.form-control(type='text' value='' name='interest2' placeholder="e.g. Swimming")
        input#interest3.form-control(type='text' value='' name='interest3' placeholder="e.g. Marathons") 
        br  
        p Gym:
        br
        input#gym.form-control(type='text' value='', name='gym' placeholder="e.g. Jetts")
        br
        p About Me:
        textarea#aboutMe.form-control(rows='4', cols='20', name='about' placeholder="Write a description")
        br

      //- NEED TO DO AN POST REQ UPDATE OF USER'S PROFILE ON SERVER SIDE
      input.btn.btn-default(type='submit', value='Update')
    
    
  if (!user)
    p Unauthorised

